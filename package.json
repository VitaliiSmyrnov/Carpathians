{
  "devDependencies": {
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3"
  },
  "scripts": {
    "dev": "postcss ./src/input.css -o ./public/styles.css",
    "build": "npx tailwindcss -i ./src/input.css -o ./public/styles.css --watch",
    "mini": "npx tailwindcss -i ./public/styles.css -o ./public/styles.min.css --minify"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "last 2 versions",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
